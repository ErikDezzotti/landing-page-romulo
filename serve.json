{
  "public": ".",
  "directoryListing": false,
  "unlisted": [
    ".DS_Store",
    ".git"
  ],
  "headers": [
    {
      "source": "**/*.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/captura", "destination": "/captura.html" },
    { "source": "/captura.html", "destination": "/captura.html" },
    { "source": "/obrigado", "destination": "/obrigado.html" },
    { "source": "/obrigado.html", "destination": "/obrigado.html" },
    { "source": "/**", "destination": "/index.html" }
  ]
} 